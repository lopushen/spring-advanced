<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"

default-init-method="init" default-destroy-method="destroy">
    <bean id="person" class="com.loplop.springadvanced.beans.Person"
    init-method="onCreate" destroy-method="onDestroy" factory-method="getInstance">
        <constructor-arg name="id" value="777" type="int"/>
        <constructor-arg name="name" value="John" type="java.lang.String"/>
        <property name="taxId" value="67235674"/>
        <property name="address" ref="address"></property>

    </bean>


    <bean id="person2" class="com.loplop.springadvanced.beans.Person"
          init-method="onCreate" destroy-method="onDestroy" factory-bean="personFactory" factory-method="createPerson">
        <constructor-arg name="id" value="76678" type="int"/>
        <constructor-arg name="name" value="Mike" type="java.lang.String"/>
        <property name="taxId" value="52525"/>
        <property name="address" ref="address"></property>

    </bean>


    <bean id="personFactory" class="com.loplop.springadvanced.beans.PersonFactory"/>



    <bean id="address" class="com.loplop.springadvanced.beans.Address">
        <constructor-arg name="postCode" value="ff777" type="java.lang.String"/>
        <constructor-arg name="street" value="Govno" type="java.lang.String"/>

    </bean>


    <bean id="address2" class="com.loplop.springadvanced.beans.Address" p:street="Pstreet name" p:postCode="ppp888">
    </bean>
    
    <bean id="basket" class="com.loplop.springadvanced.beans.FruitBasket">

        <constructor-arg index="0" value="John's basket"/>
        <constructor-arg index="1">
            <set>
                <value>kiwi</value>
                <value>banana</value>
                <value>kokok</value>
                <value>kisa</value>
            </set>
        </constructor-arg>
    </bean>

    <bean id="jungle" class="com.loplop.springadvanced.beans.Jungle">
        <property name="largest" >
            <bean class="com.loplop.springadvanced.beans.Animal">
                <property name="name" value="Inner Richard"/>
                <property name="type" value="inner elephant"/>
            </bean>
        </property>
        <property name="animals">
            <list>
                <ref bean="elephant"/>
                <ref bean="snake"/>
                <ref bean="lion"/>
            </list>
        </property>
    </bean>

    <bean id="lion" class="com.loplop.springadvanced.beans.Animal">
        <property name="name" value="Igor"/>
        <property name="type" value="lion"/>
    </bean>
    <bean id="elephant" class="com.loplop.springadvanced.beans.Animal">
        <property name="name" value="Richard"/>
        <property name="type" value="elephant"/>
    </bean>
    <bean id="snake" class="com.loplop.springadvanced.beans.Animal">
        <property name="name" value="Bob"/>
        <property name="type" value="snake"/>
    </bean>
</beans>